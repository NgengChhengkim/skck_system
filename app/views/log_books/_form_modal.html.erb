<div class="modal fade logbook-form-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= form_title object %></h4>
      </div>
      <%= form_for object, remote: true do |f| %>
        <div class="modal-body">
          <div class="errors"></div>
          <%= f.hidden_field :company_id, value: current_user.company.id %>
          <%= f.label :transaction_date %>
          <%= f.text_field :transaction_date, value: f.object.transaction_date || Date.today, class: "datepicker form-control", required: true %>
          <%= f.label :cash_type_id %>
          <%= f.collection_select :cash_type_id, @cash_types, :id, :name, {},
            class: "cash_type selectize-select" %>
          <%= f.label :voucher_type_id %>
          <%= f.collection_select :voucher_type_id, @voucher_types, :id, :abbreviation,
            {}, class: "voucher_type selectize-select" %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t "actions.close" %></button>
          <%= f.submit t("logbooks.actions.save"), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  load_selectize_simple(".selectize-select");
</script>
