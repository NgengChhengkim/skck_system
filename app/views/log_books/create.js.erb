<% if @log_book.errors.any? %>
  $(".errors").html("<%= j render 'shared/errors', object: @log_book %>");
<% else %>
  $(".errors").html("");
  $(".logbook-form-modal").modal("hide");

  if($("#journal-entry").length > 0) {
    var modal_transaction_date = $("#log_book_transaction_date");
    var transaction_date = new Date(modal_transaction_date.val());
    set_datepicker(transaction_date);

    var bank_type_selectize = $(".bank_type")[0].selectize;
    var bank_type_id = "<%= @log_book.cash_type.bank_types.first.id %>"
    bank_type_selectize.addItem(bank_type_id);

    var logbook_selectize = $(".log_book")[0].selectize;
    var value = "<%= @log_book.id %>";
    var text = "<%= @log_book.reference_no %>";
    var data = [{value: value, text: text}];
    logbook_selectize.addOption(data);
    logbook_selectize.addItem(data[0].value);

  }else{
    $(".logbook-list").html("<%= j render @log_books %>");
    $(".flash").html("<%= j render 'shared/flash' %>");
  }
<% end %>
