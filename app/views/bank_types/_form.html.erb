<div class="modal fade bank-type-form-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= t "bank_types.bank_type" %></h4>
      </div>
      <%= form_for object, remote: true do |f| %>
        <div class="modal-body">
          <div class="errors"></div>
          <%= f.hidden_field :company_id, value: @company.id %>
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control", required: true %>

          <%= f.label :cash_type_id %>
          <%= f.select :cash_type_id,
            options_for_select(@cash_types.map{|type| [type.name, type.id]},
            object.cash_type_id), {}, class: "selectize-select", disabled: object.data_used? %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t "btn.cancel" %></button>
          <%= f.submit t("btn.save"), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  load_selectize_simple(".selectize-select");
</script>
