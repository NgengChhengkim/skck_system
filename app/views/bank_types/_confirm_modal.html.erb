<div class="modal fade bank-type-confirm-modal" tabindex="-1" role="dialog">
   <div class="modal-dialog">
     <div class="modal-content">
       <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
         <h4 class="modal-title"><%= t "labels.warning" %></h4>
       </div>
       <div class="modal-body">
         <p><%= t "bank_types.messages.#{@type}" %></p>
       </div>
       <div class="modal-footer">
         <button type="button" class="btn btn-default" data-dismiss="modal">
         <%= t "actions.close" %></button>
         <%= link_to t("bank_type.actions.delete"), @bank_type, method: :delete, class: "btn #{@btn_state}" %>
       </div>
     </div>
   </div>
 </div>
