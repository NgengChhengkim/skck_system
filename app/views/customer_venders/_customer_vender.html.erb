<tr>
  <td><%= link_to customer_vender.name, partner_path(@status, customer_vender) %></td>
  <td><%= customer_vender_state customer_vender %></td>
  <td><%= link_to t("customer_vender.actions.edit"), edit_partner_path(@status, customer_vender),
    remote: true %></td>
  <td>
    <% if customer_vender.active? %>
      <%= link_to t("customer_vender.actions.delete"),
        modal_customer_vender_path(@status, customer_vender), remote: true %>
    <% else %>
      <%= link_to t("customer_vender.actions.active"),
        modal_customer_vender_path(@status, customer_vender), remote: true %>
    <% end %>
  </td>
</tr>
