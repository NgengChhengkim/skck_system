<!DOCTYPE html>
<html>
  <head>
    <title>Qvsystem</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="wrapper">
      <div class="header">
        <%= render "shared/header" %>
      </div>
      <div class="content container">
        <div class="flash">
          <%= render "shared/flash" %>
        </div>
        <%= yield %>
      </div>
      <%= render "shared/footer" %>
    </div>

    <div class="api" data-email="<%= current_user.try(:email) %>"
      data-token="<%= current_user.try(:authentication_token) %>"></div>
  </body>
</html>
